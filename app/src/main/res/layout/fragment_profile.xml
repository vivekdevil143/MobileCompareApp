<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1ebeb">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:ignore="InvalidId">

            <android.support.v7.widget.CardView
                android:id="@+id/user_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_person" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/user_photo"
                android:text="Get started"
                android:textColor="#000"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/sign_in"
                android:layout_toRightOf="@+id/user_photo"
                android:text="Log in or Sign up"
                android:textColor="#FF4500"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/notification"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:text="Notification Center"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/viewpager1"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_below="@+id/notification"
                        android:layout_marginTop="5dp"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@+id/viewpager1"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:text="Favourities"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/viewpager2"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_below="@+id/favourite"
                        android:layout_marginTop="5dp"
                        android:background="#000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@id/viewpager2"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:text="Product Launch Alerts"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <TextView

            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1"
            android:layout_marginTop="15dp"
            android:text="RECOMMENDED PRODUCTS"
            android:textColor="#000" />

        <HorizontalScrollView
            android:id="@+id/horizontal_Scrollview1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/text2"
            android:layout_marginTop="15dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />


            </LinearLayout>
        </HorizontalScrollView>


        <TextView

            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_Scrollview1"
            android:layout_marginTop="15dp"
            android:text="RECENTLY VIEW PRODUCTS"
            android:textColor="#000" />

        <HorizontalScrollView
            android:id="@+id/horizontal_Scrollview2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/text3"
            android:layout_marginTop="15dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp" />


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontal_Scrollview2"
            android:layout_marginTop="15dp"
            android:text="OTHERS"
            android:textColor="#000" />

        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text4"
            android:layout_marginTop="15dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/share_app"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:text="Share the App"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/viewpager5"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_below="@+id/share_app"
                        android:layout_marginTop="5dp"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/rate_app"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@+id/viewpager5"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:text="Rate This App"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <View
                        android:id="@+id/viewpager6"
                        android:layout_width="match_parent"
                        android:layout_height="0.2dp"
                        android:layout_below="@+id/rate_app"
                        android:layout_marginTop="5dp"
                        android:background="#000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@id/viewpager6"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:text="Feeedback"
                        android:textColor="#000"
                        android:textSize="15sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>